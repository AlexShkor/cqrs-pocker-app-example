@using System.Web.Optimization
@using Poker.Web.App_Start

<!DOCTYPE html>
<html ng-app="myApp">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <title>AKQpoker| @ViewBag.Title</title>

        <link rel="SHORTCUT ICON" href="~/Assets/app/css/img/favicon.ico" />
        @Styles.Render("~/content/css")
        @Scripts.Render("~/scripts/jquery-2.0.3.min.js")
        @Scripts.Render("~/scripts/angular.js")
        
        @Scripts.Render("~/scripts/jquery.signalR-1.1.3.min.js")
        @Scripts.Render("~/signalr/hubs")
        <script src="/app/signals.js?v=@BundleConfig.ContentVersion" type="text/javascript"></script>

        <script src="/app/app.js?v=@BundleConfig.ContentVersion" type="text/javascript"></script>
        <script src="/app/home.js?v=@BundleConfig.ContentVersion" type="text/javascript"></script>
        <script src="/app/tables.js?v=@BundleConfig.ContentVersion" type="text/javascript"></script>
        <script src="/app/game.js?v=@BundleConfig.ContentVersion" type="text/javascript"></script>

    </head>
<body class="landing-layout">
    <div id="globalLoader" 
         style="display: none;" >
        <div class="circle"></div>
        <div class="circle1"></div>
    </div>
    
@Html.Partial("Navigation")
    <div id="main" ng-view>@RenderBody()</div>
</body>
</html>


