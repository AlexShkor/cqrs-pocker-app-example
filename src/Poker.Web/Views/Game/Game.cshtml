<div class="container">
    <h2>Game {{game.Name}}</h2>

    <div>
        <div class="span6">
            <div ng-repeat="card in game.Deck" class="card" ng-style="{color: card.Color}">
                <div class="card-value">{{card.Value}}</div>
                <div class="card-symbol" ng-bind-html="card.Symbol"></div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <br />
    <div class="row-fluid">
        <div class="well span2" ng-repeat="player in game.Players">
            <h4 ng-class="{highlight: player.CurrentTurn}">{{player.Name}} #{{player.Position}} </h4>
            <div>Cash: {{player.Cash}}</div>
            <div>Bid: {{player.Bid}}</div>
            <div>
                <div ng-repeat="card in player.Cards" class="card" ng-style="{color: card.Color}">
                    <div class="card-value">{{card.Value}}</div>
                    <div class="card-symbol" ng-bind-html="card.Symbol"></div>
                </div>
            </div>
        </div>
    </div>
    <br />

    <div>

        <div class="pull-left">
            <button ng-click="check()" ng-disabled="game.CurrentPlayerId != game.MyId" class="btn btn-success btn-block">Check</button>
            <button ng-click="fold()" ng-disabled="game.CurrentPlayerId != game.MyId" class="btn btn-danger btn-block">Fold</button>
            <button ng-click="call()" ng-disabled="game.CurrentPlayerId != game.MyId" class="btn btn-warning btn-block">Call</button>
            <button ng-click="raise()" ng-disabled="game.CurrentPlayerId != game.MyId" class="btn btn-warning btn-block">Raise</button>

            @*<input type="number" class="span2" ng-model="RaiseValue" min="{{game.MaxBid}}" data-ng-disabled="game.CurrentPlayerId != game.MyId" />*@
        </div>

        <div class="pull-left offset1">
            <span class="glyphicon glyphicon-chevron-up" style="display: block"></span>
            <span class="vote-count-post ">3</span>
            <span class="glyphicon glyphicon-chevron-down" style="display: block"></span>
        </div>


    </div>

    <br />
    <br />
    <div style="padding-top: 30px;">
        <span class="label label-warning" ng-show="game.CurrentPlayerId == game.MyId">Your turn</span>
    </div>
</div>