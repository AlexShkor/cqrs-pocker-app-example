@using Poker.Web.App_Start
<div class="container">
    <h2>Game {{game.Name}}</h2>

    <button ng-click="refresh()" class="btn pull-right">Refresh</button>
    <div>
        <div class="span6">
            <div ng-repeat="card in game.Deck" class="card" ng-style="{color: card.Color}">
                <div class="card-value">{{card.Value}}</div>
                <div class="card-symbol" ng-bind-html="card.Symbol"></div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <br />
    <div class="row-fluid">
        <div class="well span2" ng-repeat="player in game.Players">
            <h4 ng-class="{highlight: player.CurrentTurn}">{{player.Name}} #{{player.Position}} </h4>
            <div>
                <span>Cash: {{player.Cash}}</span>
            </div>
            <div>
                <span style="padding-right: 20px">Bid: {{player.Bid}}</span>
                <span ng-show="player.IsSmallBlind || player.IsBigBlind" ng-class="{'label label-success' : player.IsSmallBlind, 'label label-info' : player.IsBigBlind }">{{player.BlindText}}</span>
            </div>

            <div style="padding-top: 10px">
                <div ng-repeat="card in player.Cards" class="card" ng-style="{color: card.Color}">
                    <div class="card-value">{{card.Value}}</div>
                    <div class="card-symbol" ng-bind-html="card.Symbol"></div>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div>
        <div>

            <button ng-click="check()" ng-disabled="!isMe()" class="btn btn-success btn-block">Check</button>
            <button ng-click="fold()" ng-disabled="!isMe()" class="btn btn-danger btn-block">Fold</button>
            <button ng-click="call()" ng-disabled="!isMe()" class="btn btn-warning btn-block">Call</button>
            <button ng-click="raise()" ng-disabled="!isMe() || rateIndex == 0" class="btn btn-warning btn-block">Raise</button>

            <span class="label label-warning offset1" ng-show="isMe()">Your turn</span>

        </div>

    </div>

    <br />

    <div ng-show="isMe()">

        <pre>{{ currentUserRate(rateIndex) }}</pre>

        <span class="pull-left">{{minRateValue}}</span> <span class="pull-right">{{maxRateValue}}</span>



        <rzslider rz-slider-floor="0"
                  rz-slider-ceil="rateMaxIndex"
                  rz-slider-model="rateIndex"
                  rz-slider-translate="currentUserRate"></rzslider>

    </div>


    <div class="well">
        <div class="span10"><input type="text" class="span9" required ng-model="newMessage" /><button class="btn " ng-click="sendMessage()">Send</button></div>
        <div class="clearfix"></div>
        <hr />
        <ul style="max-height: 400px; overflow-y: auto;">
            <li ng-repeat="message in messages">[{{message.Time}}] {{message.Name}}: {{message.Content}}</li>
        </ul>
    </div>


    <div class="well">
        <ul id="logs" style="max-height: 300px; overflow: auto;">
            <li ng-repeat='log in Logs' ng-class="{highlight: log.ishighlighted}">{{log.msg}}</li>
        </ul>
    </div>

</div>
